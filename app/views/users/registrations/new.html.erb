<section>
  <div class="register-banner">
    <div class="container">
      <div class="login_inner">
          <div class="left">
              <div class="form_wrap-inner" style="margin-left: 320px;">
                <h2>Sign Up</h2>
                <label></label>
                <%= devise_error_messages! %>
                <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= render "users/shared/error_messages", resource: resource %>
                 <div class="form-group">
                  <%= f.text_field :first_name,:placeholder => 'First Name' , :class => 'form-control',:maxlength => 15,required: true%>

                </div>
                 <div class="form-group">
                  <%= f.text_field :last_name,autocomplete: "last_name",:placeholder => 'Last Name' , :class => 'form-control',:maxlength => 15,required: true%>
                </div>
                <div class="form-group">
                  <%= f.email_field :email,  autocomplete: "email",:placeholder => 'Email' , :class => 'form-control', :maxlength => 30,required: true%>

                </div>
                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "new-password",:placeholder => 'Password' , :class => 'form-control',required: true %>
                </div>
                 <div class="form-group">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password" ,:placeholder => 'Password Confirmation' , :class => 'form-control',required: true%>
                </div>
                 <div class="form-group">
                  <%= f.text_field :phone,  autocomplete: "phone",:placeholder => 'Phone Number' ,:maxlength => 12, :class => 'number_field form-control',required: true%>
                </div>
                 <div class="form-group">
                  <%= f.text_field :address,  :id =>'autocomplete_address',autofocus: true, autocomplete: "address",:placeholder => 'Address ' , :maxlength => 25,:class => 'form-control',required: true%>
                 </div>
                 <div>
                  <%= f.submit 'submit', :style => '    background-color: #ffc107; height: 50px; width: 331px;'%>
                 </div>
              <% end %>
              <div class="text">
                <label>Already have an account?<span> <%= link_to "Log now", new_session_path(resource_name) %><br /></span></label>
              </div>
            </div>
          </div>
          
      </div>
    </div>
  </div>
  
</section>
